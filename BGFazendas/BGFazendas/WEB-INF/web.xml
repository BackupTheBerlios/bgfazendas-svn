<web-app>

<!-- The Mentawai controller -->
<servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>org.mentawai.core.Controller</servlet-class>

	<!-- Mentawai will try to find your app manager, but
		 you can also force a class name here. -->    
    <!-- init-param>
        <param-name>applicationManager</param-name>
        <param-value>br.bgfazendas.conf.ApplicationManager</param-value>
    </init-param -->
    
    <load-on-startup>1</load-on-startup>		
</servlet>

<!-- You must choose an extension to indicate a mentawai action -->
<servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>*.mtw</url-pattern>
</servlet-mapping>

    <filter>
        <filter-name>DebugFilter</filter-name>
        <filter-class>
            org.mentawai.util.DebugServletFilter
        </filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>DebugFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher> 
        <dispatcher>FORWARD</dispatcher>    
        <dispatcher>INCLUDE</dispatcher>    
        <dispatcher>ERROR</dispatcher>    
    </filter-mapping>

</web-app>